<%= form_with(model: @comment, url: shop_comments_path(@shop), local: true) do |form| %>
    <div class="form-group">
      <%= form.label :content, "コメント" %>
      <%= form.text_area :content, class: "form-control" %>
    </div>
    <%= form.submit "コメント投稿", class: "btn btn-primary" %>
<% end %>
  