<div class="shop-details">
  <h1><%= @shop.name %></h1>
  <p><%= @shop.address %></p>
  <p><a href="<%= @shop.url %>"><%= @shop.url %></a></p>
  <%= render 'comments/form' %> <!-- コメントフォームを追加 -->
  <table class="comment_list">
  <tbody>
    <% @comments.each do |comment| %>
    <tr>
      
      <td><%= comment.user.name %></td>
      <td><%= comment.content %></td>
      <td>
        <% if comment.rate.present? %>
          <% full_stars = comment.rate.floor %>
          <% half_star = (comment.rate - full_stars) >= 0.5 %>
          
          <% full_stars.times do %>
            <%= image_tag("star-on.png", class: "star-icon") %>
          <% end %>
          
          <% if half_star %>
            <%= image_tag("star-half.png", class: "star-half-icon") %>
          <% end %>
        <% end %>
      </td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "削除", shop_comment_path(comment.shop, comment), method: :delete, class: "btn btn-sm btn-danger p-0 p-1", style: "font-size: 8px;" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
  <% if @review %>
    <%= render 'reviews/rating_form', review: @review %> <!-- 評価入力用のフォームを追加 -->
  <% end %>
</div>
