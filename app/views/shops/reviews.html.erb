<div class="shop-details">
  <h1><%= @shop.name %></h1>
  <p><%= @shop.address %></p>
  <p><a href="<%= @shop.url %>"><%= @shop.url %></a></p>
</div>

<div class="reviews">
  <% @reviews.each do |review| %>
    <div class="review">
      <h3><%= review.title %></h3>
      <p><%= review.content %></p>
      <p>Rating: <%= review.rating %></p>
    </div>
  <% end %>
</div>
