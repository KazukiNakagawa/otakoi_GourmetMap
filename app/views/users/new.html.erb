<% content_for(:title, t('.title')) %>
<h1><%= t '.title' %></h1>

<div class="user_form">
  <%= form_with model: @user, url: users_path, local: true do |f| %>
    <div class="user_input">
      <%= f.label :name %>
      <%= f.text_field :name %>
      <div class="error">
        <%= @user.errors[:name].first %>
      </div>
    </div>

    <div class="user_input">
      <%= f.label :email %>
      <%= f.text_field :email %>
      <% if @user.errors.any? %>
        <div class="error">
          <%= @user.errors[:email].join(', ') %>
        </div>
      <% end %>
    </div>

    <div class="user_input">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <div class="error">
        <%= @user.errors[:password].first %>
      </div>
    </div>

    <div class="user_input">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="user_input">
      <%= f.label :hobby %>
      <%= f.text_field :hobby %>
    </div>

    <div class="user_input">
      <%= f.label :profile %>
      <%= f.text_field :profile %>
    </div>

    <div class="submit_btn">
      <%= f.submit "登録" %>
    </div>
  <% end %>
  <%= link_to 'ホームに戻る', root_path %>
</div>
